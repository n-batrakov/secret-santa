{
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true,

        "module": "commonjs",
        "target": "esnext",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,

        "noImplicitReturns": false,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["es2017", "dom"]
    },
    "exclude": [
        "node_modules",
        "**/dist",
        "**/lib",
    ]
}